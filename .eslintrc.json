{
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "rules": {
    "indent":          ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes":          ["error", "single"],
    "semi":            ["error", "always"],
    "no-unused-vars":  ["error", { "args": "all", "argsIgnorePattern": "^_" }],
    "optimize-regex/optimize-regex": "warn",
    "node/no-unsupported-features":  "off"
  },
  "plugins": [
    "node",
    "optimize-regex"
  ]
}
